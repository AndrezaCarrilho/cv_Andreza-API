{
  "info": {
    "name": "CV API",
    "_postman_id": "12345678-90ab-cdef-1234-567890abcdef",
    "description": "Coleção para testar todos os endpoints da API de currículos",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000"
    },
    {
      "key": "personId",
      "value": "1"
    }
  ],
  "item": [
    {
      "name": "Listar pessoas",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/people",
          "host": ["{{baseUrl}}"],
          "path": ["people"]
        }
      }
    },
    {
      "name": "Buscar pessoa por ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/people/{{personId}}",
          "host": ["{{baseUrl}}"],
          "path": ["people", "{{personId}}"]
        }
      }
    },
    {
      "name": "Criar pessoa",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Luíze Carrilho\",\n  \"title\": \"Desenvolvedora Web\",\n  \"summary\": \"Apaixonada por tecnologia e arte\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/people",
          "host": ["{{baseUrl}}"],
          "path": ["people"]
        }
      }
    },
    {
      "name": "Atualizar pessoa",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Luíze Carrilho\",\n  \"title\": \"Front-End Developer\",\n  \"summary\": \"Atualizei o título\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/people/{{personId}}",
          "host": ["{{baseUrl}}"],
          "path": ["people", "{{personId}}"]
        }
      }
    },
    {
      "name": "Deletar pessoa",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/people/{{personId}}",
          "host": ["{{baseUrl}}"],
          "path": ["people", "{{personId}}"]
        }
      }
    }
  ]
